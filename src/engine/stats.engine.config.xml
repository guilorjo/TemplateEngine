<?xml version="1.0" ?>
<!--

	Fichier de configuration du TemplateEngine

-->
<conf>

	<!-- Configuration des pages -->
	<pages>
		<!-- page index.php -->
		<page name="index">
			<title>Welcome !!</title>
			<description>This is my pretty website ! I love php !</description>
			<template>template.default</template>
		</page>

		<page name="header">
			<title>header widget</title>
			<description>header widget</description>
			<template>template.default</template>
		</page>
	</pages>

	<!-- Configuration des templates -->
	<templates>
		<!-- template mainTemplate -->
		<template name="template.default">
			<var name="header" cache_duration="0" widget="header">
			</var>
		</template>
	</templates>

	<!-- Configuration des widgets -->
	<!-- exemple -->
	<widgets>
		<widget name="yout_widget" cache_duration="10">
			<param name="url_param_get" method="get">var_nam_urlparam</param>
		</widget>
	</widgets>

</conf>